def circle():
    r=int(input("enter the radius of the cicle"))
    print("area of the cicle is",3.14*r*r)
    
def rect(a,b):
    print("area of rectangle is",a*b)
    
def tri():
    b=int(input("enter the base of the triangle"))
    h=int(input("enter the height of the triangle"))
    return 0.5*b*h
    
def sqr(a):
    return a*a
    
